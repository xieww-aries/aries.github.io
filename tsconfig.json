{
    "compilerOptions": {
        "lib": ["esnext"],
        "module": "es6",
        "moduleResolution": "node",
        "target": "es6",
        "jsx": "react-native",
        "sourceMap": true,
        "noEmit": true,
        "noImplicitAny": true,
        "preserveConstEnums": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./",
        "paths": {
            "@/*": ["./*"]
        },
        "skipLibCheck": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "esModuleInterop": true
    },
    "include": [
        "./src/**/*.tsx",
        "./src/**/*.ts",
        "./typings/**/*.d.ts", "src/pages/list/index.jsx", "src/components/JsDoc/Index/index.jsx"
    ],
    "exclude": [
        "node_modules"
    ]
}